generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id               Int               @id @default(autoincrement())
  email            String            @unique 
  password         String
  status           Boolean           @default(true) 
  created_by       Int?
  role             String?
  email_verify     Boolean           @default(false)
  verification_token   String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  // Relations
  user_information user_information?
}

model user_information {
  id               Int       @id @default(autoincrement())
  user_id          Int       @unique
  first_name       String
  middle_name      String?
  last_name        String
  contact_number   String?
  address          String?
  about            String?
  created_by       Int?
  updated_by       Int?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user             user      @relation(fields: [user_id], references: [id])
  user_item        user_item[]
  orders           Orders[]
  reports          Report[]
}

model user_item {
  id               Int       @id @default(autoincrement())
  user_information user_information @relation(fields: [user_id], references: [id])
  user_id          Int      
  item_name        String?
  item_description String?
  status           String?
  image_url        String?
  qr_token         String    @unique
  qr_image_url     String?
  allow_download_image  Boolean @default(false)
  created_by       Int
  updated_by       Int?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  orders           Orders[]
  reports          Report[]
}

model Orders {
  id               Int            @id @default(autoincrement())
  user_information user_information @relation(fields: [customer_id], references: [id])
  customer_id      Int
  user_item        user_item      @relation(fields: [user_item_id], references: [id])
  user_item_id     Int
  status           String
  payment_method   String
  created_by       String
  updated_by       String
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  
  orderDetails     OrderDetails[]
}

model OrderDetails {
  id       Int     @id @default(autoincrement())
  order_id Int
  item_id  Int
  quantity Int
  price    Decimal @db.Decimal(10, 2)
  
  order    Orders  @relation(fields: [order_id], references: [id])
  item     Items   @relation(fields: [item_id], references: [id])
}

model Items {
  id                  Int      @id @default(autoincrement())
  product_title       String
  product_description String?  @db.Text
  price               Decimal  @db.Decimal(10, 2)
  available_quantity  Int
  category            String
  badge               String?
  stock_status        String
  product_image_url   String?
  created_by          Int
  updated_by          Int?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  orderDetails        OrderDetails[]
}

model Report {
  id               Int      @id @default(autoincrement())
  user_information user_information @relation(fields: [customer_id], references: [id])
  customer_id      Int
  user_item        user_item @relation(fields: [user_item_id], references: [id])
  user_item_id     Int
  name             String
  date_found       DateTime
  place_found      String
  claim_address    String?
  additional_notes String?  @db.Text
  upload_image_url String?
  created_by       Int
  updated_by       Int?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}